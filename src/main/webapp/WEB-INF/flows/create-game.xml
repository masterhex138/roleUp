<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow
        http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
	start-state="createGameForm">



	<var name="game" class="com.master.roleup.object.Game" />

	<view-state id="createUserForm" view="create-user" model="game">
		<transition on="submit" to="createUserAction" />
		<transition on="cancel" to="end" />
	</view-state>

	<action-state id="createUserAction">
		<evaluate expression="userService.createUser(user)" />
		<transition on="success" to="userCreated" />
        <transition on="exists" to="createUserForm"/>
	</action-state>

        <end-state id="userCreated">
            <output name="user"/>
        </end-state>
        
	<end-state id="end" />



</flow>
